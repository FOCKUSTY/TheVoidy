{
    "compilerOptions": {
        "target": "ES2020",
        "module": "CommonJS",
        "rootDir": "./",
        "outDir": "./dist",
        "removeComments": true,
        "resolveJsonModule": true,
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "strict": true,
        "strictNullChecks": true,
        "skipLibCheck": true,
        "baseUrl": "./",
        "paths": {
            "src/*": [ "./src/*", "./dist/src/*" ],

            "discord/*": [ "./src/discord/*", "./dist/src/discord/*" ],
            "telegram/*": [ "./src/telegram/*", "./dist/src/telegram/*" ],
            "utility/*": [ "./src/utility/*", "./dist/src/utility/*" ],
            "types/*": [ "./src/types/*", "./dist/src/types/*" ],
            "logger/*": [ "./src/logger/*", "./dist/src/logger/*" ],
            "develop/*": [ "./src/develop/*", "./dist/src/develop/*" ],

            "@thevoid":  [ "./node_modules/@thevoidcommunity/the-void-database/index" ],
            "@thevoid/*": [ "./node_modules/@thevoidcommunity/the-void-database/*" ]
        }
    },
    "include": [ "./**/*.ts" ],
    "exclude": [ "node_modules", "dist" ],
    "ts-node": {
        "require": ["tsconfig-paths/register"]
    }
}