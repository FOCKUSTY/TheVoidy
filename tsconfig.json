{
    "compilerOptions": {
        "target": "ES2020",
        "module": "CommonJS",
        "rootDir": "../",
        "outDir": "./dist",
        "removeComments": true,
        "resolveJsonModule": true,
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "strict": true,
        "strictNullChecks": true,
        "skipLibCheck": true, 
        "baseUrl": "./",
        "paths": {
            "config": ["./src/index.config.ts"],

            "discord/*": ["./src/discord/*"],
            "telegram/*": ["./src/telegram/*"],
            "utility/*": ["./src/utility/*"],
            "types/*": ["./src/types/*"],
            "logger/*": ["./src/logger/*"],
            "develop/*": ["./src/develop/*"],
            "database/*": ["./src/database/*"]
        }
    },
    "include": ["./**/*.ts"]
}