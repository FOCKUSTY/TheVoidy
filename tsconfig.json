{
    "compilerOptions": {
        "target": "ES2020",
        "module": "CommonJS",
        "rootDir": "../",
        "outDir": "./dist",
        "removeComments": true,
        "resolveJsonModule": true,
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "strict": true,
        "strictNullChecks": true,
        "skipLibCheck": true, 
        "baseUrl": "./",
        "paths": {
            "config": ["./src/index.config.ts", "./dist/VoidType/src/index.config.js" ],

            "discord/*": ["./src/discord/*", "./dist/VoidType/src/discord/*" ],
            "telegram/*": ["./src/telegram/*", "./dist/VoidType/src/telegram/*" ],
            "utility/*": ["./src/utility/*", "./dist/VoidType/src/utility/*" ],
            "types/*": ["./src/types/*", "./dist/VoidType/src/types/*" ],
            "logger/*": ["./src/logger/*", "./dist/VoidType/src/logger/*" ],
            "develop/*": ["./src/develop/*", "./dist/VoidType/src/develop/*" ],
            "database/*": ["./src/database/*", "./dist/VoidType/src/database/*" ],
            
            "src/*": ["./src/*", "./dist/VoidType/src/*"]
        }
    },
    "include": [ "./**/*.ts" ],
    "exclude": [ "node_modules", "dist" ],
    "ts-node": {
        "require": ["tsconfig-paths/register"]
    }
}