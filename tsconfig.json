{
  "compilerOptions": {
    "target": "ES2024",
    "module": "CommonJS",
    "rootDir": "./src",
    "outDir": "./dist",
    "removeComments": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "strictNullChecks": true,
    "skipLibCheck": true,
    "baseUrl": "./",
    "paths": {
      "@bot": ["./src/bot"],
      "@bots": ["./src/bots"],
      "@types": ["./src/types"],
      "@utility": ["./src/utility"],
      "@develop": ["./src/utility/develop"],
      "@services": ["./src/utility/services"],
      "@bot/*": ["./src/bot/*"],
      "@bots/*": ["./src/bots/*"],
      "@telegram/*": ["./src/bots/telegram/*"],
      "@discord/*": ["./src/bots/discord/*"],
      "@types/*": ["./src/types/*"],
      "@utility/*": ["./src/utility/*"],
      "@develop/*": ["./src/utility/develop/*"],
      "@services/*": ["./src/utility/services/*"],
    }
  },
  "include": [
    "./**/*.ts",
  ],
  "exclude": [
    "node_modules",
    "dist",
    "packages",
    "log",
    "docs",
    "bots",
    "utility"
  ],
  "ts-node": {
    "require": ["tsconfig-paths/register"]
  }
}
