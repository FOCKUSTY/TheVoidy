{
    "compilerOptions": {
        "target": "ES2024",
        "module": "CommonJS",
        "outDir": "./dist",
        "removeComments": true,
        "resolveJsonModule": true,
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "strict": true,
        "strictNullChecks": true,
        "skipLibCheck": true,
        "declaration": true,
        "paths": {            
            "v@develop": [ "./node_modules/@voidy/develop/dist" ],

            "v@telegram/*": [ "./node_modules/@voidy/telegram/dist/*" ],
            "v@discord/*": [ "./node_modules/@voidy/discord/dist/*" ],
            "v@services/*": [ "./node_modules/@voidy/services/dist/*" ],
            "v@develop/*": [ "./node_modules/@voidy/develop/dist/*" ],
            "v@types": [ "./node_modules/@voidy/types/dist" ],
            "v@types/*": [ "./node_modules/@voidy/types/dist/*" ]
        }
    },
    "include": [ "src" ],
    "exclude": [ "node_modules", "dist" ],
    "ts-node": {
        "require": ["tsconfig-paths/register"]
    }
}