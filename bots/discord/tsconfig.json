{
  "compilerOptions": {
    "target": "ES2024",
    "module": "CommonJS",
    "outDir": "./dist",
    "removeComments": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "strictNullChecks": true,
    "skipLibCheck": true,
    "declaration": true,
    "paths": {
      "src/*": ["./src/*"],
      "subcommands/*": ["./src/subcommands/*"],
      "utility/*": ["./src/utility/*"],
      "tools/*": ["./src/utility/tools/*"]
    }
  },
  "include": ["src"],
  "exclude": ["node_modules", "dist"],
  "ts-node": {
    "require": ["tsconfig-paths/register"]
  }
}
